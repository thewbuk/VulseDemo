datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  todos     Todo[]
}